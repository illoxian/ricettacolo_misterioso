<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/scanner_dialog_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pattern" />

    <TextView
        android:id="@+id/scanner_dialog_product_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Product name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_dialog_image" />

    <TextView
        android:id="@+id/scanner_dialog_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Product name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/scanner_dialog_product_name_label"
        app:layout_constraintTop_toTopOf="@+id/scanner_dialog_product_name_label" />

    <TextView
        android:id="@+id/scanner_dialog_generic_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Generic name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_dialog_product_name_label" />

    <TextView
        android:id="@+id/scanner_dialog_generic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Generic name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/scanner_dialog_product_name_label"
        app:layout_constraintTop_toTopOf="@+id/scanner_dialog_generic_name_label" />

    <TextView
        android:id="@+id/scanner_dialog_brand_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Brand:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_dialog_generic_name_label" />

    <TextView
        android:id="@+id/scanner_dialog_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Brand"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/scanner_dialog_brand_label"
        app:layout_constraintTop_toTopOf="@id/scanner_dialog_brand_label" />

    <TextView
        android:id="@+id/scanner_dialog_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Code:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanner_dialog_brand_label" />

    <TextView
        android:id="@+id/scanner_dialog_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Code"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/scanner_dialog_brand_label"
        app:layout_constraintTop_toTopOf="@id/scanner_dialog_code_label" />

    <TextView
        android:id="@+id/scanner_dialog_data_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/scanner_alert_dialog_data_source_label"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanner_dialog_code_label" />

</androidx.constraintlayout.widget.ConstraintLayout>